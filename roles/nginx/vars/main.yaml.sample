---
# Build and manage VMs using the Proxmox API

proxmox_api_host: 'your-host'
proxmox_api_url: 'https://{{ proxmox_api_host }}:8006'
proxmox_api_user: 'your-user@pve'
proxmox_api_id: 'your-token-id'
proxmox_api_secret: 'your-secret'
proxmox_api_auth: 'PVEAPIToken={{ proxmox_api_user }}!{{ proxmox_api_id }}={{ proxmox_api_secret }}'
proxmox_node: 'your-node'
